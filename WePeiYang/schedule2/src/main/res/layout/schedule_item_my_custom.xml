<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/my_custom_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/custom_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="约会" />

            <TextView
                android:id="@+id/custom_course_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/custom_course_name"
                app:layout_constraintTop_toBottomOf="@id/custom_course_name"
                tools:text="女朋友" />

            <TextView
                android:id="@+id/custom_course_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/custom_course_teacher"
                app:layout_constraintTop_toBottomOf="@id/custom_course_teacher"
                tools:text="55教咖啡厅" />

            <TextView
                android:id="@+id/custom_course_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/custom_course_teacher"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="单双周" />

            <TextView
                android:id="@+id/custom_course_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/custom_course_room"
                app:layout_constraintEnd_toStartOf="@+id/textView5"
                tools:text="1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="—"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/custom_course_start_time"
                app:layout_constraintEnd_toStartOf="@+id/custom_course_end_time"
                app:layout_constraintTop_toTopOf="@+id/custom_course_start_time" />

            <TextView
                android:id="@+id/custom_course_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="3"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/custom_course_start_time"
                app:layout_constraintEnd_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/custom_course_start_time" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="节"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/custom_course_end_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/custom_course_end_time" />

            <TextView
                android:id="@+id/custom_course_weekday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:fontFamily="sans-serif-medium"
                android:text="一"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/custom_course_teacher"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/custom_course_teacher" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="周"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/custom_course_teacher"
                app:layout_constraintStart_toEndOf="@+id/custom_course_teacher"
                app:layout_constraintTop_toTopOf="@+id/custom_course_teacher" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>