<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_schedule_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/common_lv1"
            android:layout_marginLeft="10dp"
            tools:text="专业外语" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_course_location_icon"
                android:tint="#70C1B3"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/widget_course_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                tools:text="\@45B201" />

            <TextView
                android:id="@+id/widget_course_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textColor="#70C1B3"
                android:textSize="16sp"
                tools:text="第3-5节" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>